# Environment Configuration
# Copy this file to .env and update values for your environment

# ═══════════════════════════════════════════════════════════════
# Application Under Test
# ═══════════════════════════════════════════════════════════════
BASE_URL=https://example.com
API_BASE_URL=https://api.example.com

# ═══════════════════════════════════════════════════════════════
# Environment (dev | staging | prod)
# ═══════════════════════════════════════════════════════════════
TEST_ENV=dev

# ═══════════════════════════════════════════════════════════════
# Browser Configuration
# ═══════════════════════════════════════════════════════════════
BROWSER=chrome
HEADLESS=false
WINDOW_WIDTH=1920
WINDOW_HEIGHT=1080

# ═══════════════════════════════════════════════════════════════
# Execution Configuration
# ═══════════════════════════════════════════════════════════════
MAX_INSTANCES=5
LOG_LEVEL=info
LOG_DIR=
RETRY_COUNT=1
SPEC_FILE_RETRIES=0
TIMEOUT_IMPLICIT=15000
TIMEOUT_PAGE_LOAD=30000
TIMEOUT_SCRIPT=30000

# ═══════════════════════════════════════════════════════════════
# Security / Encryption
# ═══════════════════════════════════════════════════════════════
ENCRYPTION_KEY=

# ═══════════════════════════════════════════════════════════════
# Reporting
# ═══════════════════════════════════════════════════════════════
REPORT_FORMAT=spec

# ═══════════════════════════════════════════════════════════════
# Selenium Grid / Remote Configuration
# ═══════════════════════════════════════════════════════════════
SELENIUM_HUB_HOST=
SELENIUM_HUB_PORT=
SELENIUM_HUB_PATH=
USE_SELENIUM_GRID=false

# ═══════════════════════════════════════════════════════════════
# Database Configuration (Optional)
# ═══════════════════════════════════════════════════════════════
DB_HOST=
DB_PORT=
DB_NAME=
DB_USER=
DB_PASSWORD=

# ═══════════════════════════════════════════════════════════════
# API Authentication (Optional)
# ═══════════════════════════════════════════════════════════════
API_KEY=
AUTH_TOKEN=

# ═══════════════════════════════════════════════════════════════
# Mobile / Appium Configuration
# ═══════════════════════════════════════════════════════════════
APPIUM_HOST=localhost
APPIUM_PORT=4723
ANDROID_DEVICE=emulator-5554
ANDROID_APP_PACKAGE=
ANDROID_APP_ACTIVITY=
IOS_DEVICE=iPhone 15
IOS_PLATFORM_VERSION=17.0
IOS_BUNDLE_ID=

# ═══════════════════════════════════════════════════════════════
# Data-Driven / Execution Control
# ═══════════════════════════════════════════════════════════════
EXECUTION_MATRIX=
TAG_EXPRESSION=

# ═══════════════════════════════════════════════════════════════
# Report Backup
# ═══════════════════════════════════════════════════════════════
REPORT_BACKUP_ENABLE=false
REPORT_BACKUP_PATH=
REPORT_BACKUP_KEEP=30

# ═══════════════════════════════════════════════════════════════
# Custom Driver Resolution
# Download browser drivers from an internal/corporate artifact server
# URL pattern: http://<DRIVER_HOST_URL>/<DRIVER_VERSION>/<driverName_platform>.zip
# ═══════════════════════════════════════════════════════════════
DRIVER_HOST_URL=
DRIVER_VERSION=
DRIVER_NAME=edgedriver
DRIVER_BINARY_NAME=msedgedriver
DRIVER_CACHE_DIR=.cache
DRIVER_FORCE_DOWNLOAD=false

# ═══════════════════════════════════════════════════════════════
# Email / Notification (Optional)
# ═══════════════════════════════════════════════════════════════
SLACK_WEBHOOK_URL=
EMAIL_RECIPIENTS=

# ═══════════════════════════════════════════════════════════════
# Cloud Provider Selection
# Set to: browserstack | saucelabs | lambdatest | perfecto
# Then run: npx wdio run config/wdio.cloud.js
# ═══════════════════════════════════════════════════════════════
CLOUD_PROVIDER=

# ═══════════════════════════════════════════════════════════════
# BrowserStack Configuration
# https://www.browserstack.com/automate/capabilities
# ═══════════════════════════════════════════════════════════════
BROWSERSTACK_USERNAME=
BROWSERSTACK_ACCESS_KEY=
BROWSERSTACK_PROJECT=
BROWSERSTACK_BUILD=
BROWSERSTACK_LOCAL=false
BROWSERSTACK_LOCAL_ID=
BROWSERSTACK_DEBUG=false
BROWSERSTACK_NETWORK_LOGS=false
BROWSERSTACK_CONSOLE_LOGS=errors
BROWSERSTACK_VIDEO=true
BROWSERSTACK_OS=
BROWSERSTACK_OS_VERSION=
BROWSERSTACK_RESOLUTION=
BROWSERSTACK_DEVICE=
BROWSERSTACK_REAL_MOBILE=true
BROWSERSTACK_APP_URL=
BROWSERSTACK_APPIUM_VERSION=

# ═══════════════════════════════════════════════════════════════
# Sauce Labs Configuration
# https://docs.saucelabs.com/dev/test-configuration-options/
# ═══════════════════════════════════════════════════════════════
SAUCE_USERNAME=
SAUCE_ACCESS_KEY=
SAUCE_REGION=us-west-1
SAUCE_BUILD=
SAUCE_TUNNEL_NAME=
SAUCE_TUNNEL_OWNER=
SAUCE_SCREEN_RESOLUTION=
SAUCE_EXTENDED_DEBUGGING=false
SAUCE_CAPTURE_PERFORMANCE=false
SAUCE_IDLE_TIMEOUT=90
SAUCE_MAX_DURATION=1800
SAUCE_RECORD_VIDEO=true
SAUCE_RECORD_SCREENSHOTS=true
SAUCE_RECORD_LOGS=true
SAUCE_DEVICE=
SAUCE_PLATFORM_VERSION=
SAUCE_APP_URL=
SAUCE_APPIUM_VERSION=

# ═══════════════════════════════════════════════════════════════
# LambdaTest Configuration
# https://www.lambdatest.com/support/docs/selenium-automation-capabilities/
# ═══════════════════════════════════════════════════════════════
LAMBDATEST_USERNAME=
LAMBDATEST_ACCESS_KEY=
LAMBDATEST_BUILD=
LAMBDATEST_PROJECT=
LAMBDATEST_TUNNEL=false
LAMBDATEST_TUNNEL_NAME=
LAMBDATEST_VIDEO=true
LAMBDATEST_CONSOLE_LOGS=false
LAMBDATEST_NETWORK_LOGS=false
LAMBDATEST_VISUAL=false
LAMBDATEST_RESOLUTION=
LAMBDATEST_SELENIUM_VERSION=4.0
LAMBDATEST_DEVICE=
LAMBDATEST_PLATFORM_VERSION=
LAMBDATEST_APP_URL=
LAMBDATEST_APPIUM_VERSION=

# ═══════════════════════════════════════════════════════════════
# Perfecto Configuration
# https://developers.perfectomobile.com/
# ═══════════════════════════════════════════════════════════════
PERFECTO_CLOUD_NAME=
PERFECTO_SECURITY_TOKEN=
PERFECTO_PROJECT=
PERFECTO_JOB_NAME=
PERFECTO_JOB_NUMBER=
PERFECTO_TAGS=
